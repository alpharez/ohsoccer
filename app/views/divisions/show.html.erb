<p id="notice"><%= notice %></p>

<h2><%= @division.league.name %> | <%= @division.name %></h2>

<%= link_to 'Edit', edit_division_path(@division) %> |
<%= link_to 'Back', divisions_path %>

<% if @division.teams.any? %>
<h2>Teams</h2>
<table class="table table-striped">
<tr><th>Name</th><th>Wins</th><th>Losses</th><th>Ties</th></tr>
<%= render @teams %>
</table>
<% end %>

<% if @division.games.any? %>
  <h2>Games</h2>
  <table class="table table-striped">
  <%= render @games %>
  </table>
<% end %>

<%= form_for [@division, Game.new] do |g| %>
<%= g.label :notes %>
<%= g.text_area :notes %><br/>
<%= g.submit %>
<% end %>
