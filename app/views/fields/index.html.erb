<h1>Listing fields</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Status</th>
    <th></th>
    <th></th>
  </tr>

<% @fields.each do |field| %>
  <tr>
    <td><%= link_to field.name, field %></td>
    <td><%= field.address %></td>
    <td><%= field.city %></td>
    <td><%= field.state %></td>
    <td><%= field.zip %></td>
    <td><%= field.status %></td>
    <td><%= link_to 'Edit', edit_field_path(field) %></td>
    <td><%= link_to 'Destroy', field, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

