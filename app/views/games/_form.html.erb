<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :time %><br />
    <%= f.datetime_select :time %>
  </div>
  <div>
    <%= f.label :division %><br />
    <%= select("game", "division_id", Division.all.collect{|d| [d.name, d.id ] } ) %>
  </div>
  <div class="field">
    <%= f.label :hometeam_id %><br />
    <%= select("game", "hometeam_id", Team.all.collect {|th| [th.name, th.id ] } ) %>
  </div>
  <div class="field">
    <%= f.label :awayteam_id %><br />
    <%= select("game", "awayteam_id", Team.all.collect {|ta| [ta.name, ta.id ] } ) %>
  </div>
  <div>
    <%= f.label :homescore %><br />
    <%= f.text_field :homescore %>
  </div>
  <div>
    <%= f.label :awayscore %><br />
    <%= f.text_field :awayscore %>
  </div>
  <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </div>
  <div>
    <%= f.label :complete %><%= f.check_box :complete %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
