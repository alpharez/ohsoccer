<h1>Listing users</h1>

<table class="table table-condensed"> 
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td>
      <%= link_to user.name, user %>
      <% if user.admin? %>
        <span class="badge badge-success">admin</span>
      <% end %>
    </td>
    <td><%= user.email %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><% if current_user.admin? %><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %><% end %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>

