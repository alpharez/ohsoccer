<h1>Listing users</h1>

<table class="table table-condensed"> 

<% @users.each do |user| %>
  <tr>
    <td>
      <%= gravatar_for user %>
      <%= link_to user.name, user %>
      <% if user.has_role? :admin %>
        <span class="badge badge-success">site admin</span>
      <% end %>
      <% if user.has_role? :coach %>
        <span class="badge badge-info">coach</span>
      <% end %>
      <% if user.has_role? :referee %>
        <span class="badge badge-info">referee</span>
      <% end %>
      <% if user.has_role? :player %>
        <span class="badge badge-inverse">player</span>
      <% end %>
    </td>
    <% if current_user != nil %>
      <% if current_user.has_role? :admin %>
        <td>
          <%= link_to 'Edit', edit_user_path(user) %>
          <%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %>
        </td>
      <% end %>
    <% end %>
  </tr>
<% end %>
</table>

<br />

